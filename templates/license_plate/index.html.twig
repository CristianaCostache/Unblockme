{% extends 'base.html.twig' %}

{% block title %}My cars{% endblock %}

{% block body %}
    <h1>My cars</h1>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>License plates</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
        {% for license_plate in license_plates %}
            <tr>
                <td>{{ random(['🚗', '🚕', '🚙', '🚐', '🚘', '🚖']) }}  {{ license_plate.licensePlate }}</td>
                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('license_plate_edit', {'id': license_plate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('license_plate_new') }}" type="button" class="btn btn-success">Add new car</a>
{% endblock %}
