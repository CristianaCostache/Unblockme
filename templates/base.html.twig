<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body style="background-color: #fe8080">

<nav class="navbar sticky-top navbar-dark bg-success navbar-expand-md bg-faded justify-content-center" style="padding: 10px;">
    <a href="/" class="navbar-brand d-flex w-10 mr-auto">ðŸš˜ UnblockMe</a>
    <div class="navbar-collapse" id="collapsingNavbar3">
        <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
            {% if app.user is not null %}
                <li class="nav-item">
                    <div class="dropdown">
                        <a class="btn btn-success dropdown-toggle nav-link" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="{{ gravatar(app.user.email, 30) }}"/> {{ gravatarName(app.user.email) }}
                        </a>
                        <div class="dropdown-menu" style="right: 0; left: auto;" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item">{{ app.user.username }}</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" href="{{ path('change_password') }}">Change password</a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
                            <a class="dropdown-item" href="{{ path('export_data') }}">Export Data</a>
                            {{ include('user/_delete_form.html.twig', {'button_label': 'Delete'}) }}
                        </div>
                    </div>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

<nav>
    {% for label, messages in app.flashes %}
        {% for message in messages%}
            <div class="alert alert-{{ label }} alert-dismissible" role="alert">
                <button type="button" class="close btn-close" data-dismiss="alert" aria-label="Close"></button>
                <b>
                    {{ message }}
                </b>
            </div>
        {%  endfor %}
    {% endfor %}
</nav>

<div style="margin-left: 20%; margin-right: 20%; align-content: center; padding: 20px; background-color: #FFFFFF">
{% block body %}{% endblock %}
</div>

{% block footer %}
<footer class="bg-light text-center text-lg-start fixed-bottom">
    <div class="text-center p-3" style="background-color: #198754">
        <div class="text-white">Â© {{ 'now'|date('Y') }} Copyright â€¢
            UnblockMe â€¢ All rights reserved</div>

    </div>
</footer>
{% endblock %}


</body>
</html>